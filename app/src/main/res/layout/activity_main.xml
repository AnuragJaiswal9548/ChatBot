<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


<androidx.cardview.widget.CardView
    android:id="@+id/card1"
    android:background="@color/teal_200"
    android:layout_marginTop="2sp"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="ChatBot"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20sp"
        android:id="@+id/card2"
        android:layout_below="@+id/card1"
        android:layout_width="200dp"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/image1"
            android:layout_marginTop="10sp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/profile"

            />
        <TextView
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Hi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="200dp"
        android:layout_marginTop="20sp"
        android:id="@+id/card3"
        android:layout_below="@+id/card2"
        android:layout_width="200dp"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/image2"
            android:layout_marginTop="10sp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon"

            />
        <TextView
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="How  may I help you ?"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20sp"
        android:id="@+id/card4"
        android:layout_below="@+id/card3"
        android:layout_width="200dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/image3"
            android:layout_marginTop="10sp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/profile"

            />
        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginStart="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Types of Risk in  Risk Management Policy? "
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="110dp"
        android:layout_marginTop="20sp"
        android:id="@+id/card5"
        android:layout_below="@+id/card4"
        android:layout_width="300dp"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/image4"
            android:layout_marginTop="10sp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon"

            />
        <TextView
            android:id="@+id/txt1"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Strategic , Operational,Financial,Regulatory ,Technology, Sustainability risks"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            />

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="350sp"
        android:id="@+id/card6"
        android:layout_below="@+id/card5"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/image6"
            android:layout_marginTop="10sp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/profile"

            />
        <EditText
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Enter Text :"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:layout_marginTop="20dp"
            android:layout_marginStart="350dp"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>